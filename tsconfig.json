{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "scripthost"
    ],
    "paths": {
      "@fullcalendar/core": [
        "fullcalendar/packages/core/src/main"
      ],
      "@fullcalendar/core/*": [
        "fullcalendar/packages/core/src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "tmp/tsc-output"
  },
  "include": [
    "src/main.ts"
  ]
}
